<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>#SOTUREMIX</title>
 
    <link rel="stylesheet" href="{{{static_root}}}css/style.css">

    <meta name="description" content="#SOTUREMIX">
    <meta name="author" content="Turtle Media">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- generic sharing meta -->

{{#current_video}}
    <!-- individual video sharing meta -->

    <script>
    window.SHOWING_VIDEO = true;
    window.CURRENT_VIDEO = {{{current_video_json}}};
    </script>
{{/current_video}}
{{^current_video}}
    <!-- no-video-only sharing meta -->

    <script>
    window.SHOWING_VIDEO = false;
    window.CURRENT_VIDEO = null;
    </script>
{{/current_video}}

</head>
<body>

<header>
    <div class="wrapper">
        <h1 class="title">Remix the President!</h1>
    </div>
</header>

<section class="video-panel">
    <div class="wrapper">
        <div id="videoContainer"></div>
        <nav class="actions">
            <button id="help">Help</button>
            <button id="vamanos">Play</button>
            <button id="save">Share</button>
        </nav>
    </div>
</section>
<section class="editor-panel">
    <div class="editor">
        <ul class="speech">
        </ul>
        <input type="text" class="phrase-search">
        <ul class="matches">
        </ul>
    </div>
</section>

<script src="{{{static_root}}}js/app.js"></script>
</body>
</html>